.el-aside {
  position: relative;
  height: auto;
  z-index: 1;
  overflow: visible;
  padding: 30px 0px;
}

.nb-aside {
  width: 300px;
  min-height: 500px;

  .build-box {
    height: 500px;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 300px;

    .build {
      flex: 1;
    }
  }

  .build-cover {
    height: 400px;
    background: #EEE;
  }

  &.is-fixed {
    position: fixed;
    top: 15px;
  }

  &__title {
    font-size: 20px;
    margin-bottom: 24px;
    border-bottom: 1px solid $color-light-grey-ss;
    padding-bottom: 12px;
    color: #333;
  }

  .build {
    margin-bottom: 24px;
  }
}

